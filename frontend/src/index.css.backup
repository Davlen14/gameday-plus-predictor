/* ============================================
   üé® MODERN GAMEDAY PREDICTOR - MAIN STYLES
   ============================================ */

/* Tailwind CSS v3 directives */
@tailwind base;
@tailwind components;
@tailwind utilities;

/* Import our comprehensive global styles after Tailwind base */
@import './styles/global.css';

/* ============================================
   ÔøΩ LEGACY THEME BACKUP VARIABLES 
   ============================================ */

/* Keep legacy variables for compatibility with existing components */
:root {
    /* Legacy color variables for backward compatibility */
    --color-primary: #1a1f26;
    --color-positive: #10b981;    /* emerald-500 */
    --color-negative: #ef4444;    /* red-500 */
    --color-neutral: #06b6d4;     /* cyan-500 */
    --color-warning: #f59e0b;     /* amber-500 */
    
    /* Legacy glassmorphism variables */
    --glass-bg: rgba(26, 31, 38, 0.7);
    --glass-border: rgba(255, 255, 255, 0.1);
    --glass-blur: 24px;
}

/* ============================================
   üéØ ENHANCED LEGACY COMPATIBILITY
   ============================================ */

/* Legacy glass card styles for existing components */
.glass-card-legacy {
    background: var(--glass-bg) !important;
    backdrop-filter: blur(var(--glass-blur));
    -webkit-backdrop-filter: blur(var(--glass-blur));
    border: 1px solid var(--glass-border);
    box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
    position: relative;
    z-index: 2;
}

/* ============================================
   üíé DYNAMIC GLASSMORPHISM (Works with Tailwind)
   ============================================ */
.glass-card {
    background: var(--glass-bg) !important;
    backdrop-filter: blur(var(--glass-blur));
    -webkit-backdrop-filter: blur(var(--glass-blur));
    border: 1px solid var(--glass-border);
    box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
    position: relative;
    z-index: 2;
}

.glass-card-strong {
    background: rgba(26, 31, 38, 0.85) !important;
    backdrop-filter: blur(var(--glass-blur));
    -webkit-backdrop-filter: blur(var(--glass-blur));
    border: 1px solid rgba(255, 255, 255, 0.15);
    box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.5);
    position: relative;
    z-index: 2;
}

/* ============================================
   ‚≠ê CARD OVERLAY SHINE EFFECT
   ============================================ */
.card-shine {
    position: absolute;
    inset: 0;
    background: linear-gradient(to bottom right, rgba(255, 255, 255, 0.05), transparent);
    pointer-events: none;
}

/* ============================================
   üí´ METRIC VALUE COLORS WITH GLOW
   ============================================ */
.metric-value-positive {
    color: var(--color-positive);
    text-shadow: 0 0 10px rgba(16, 185, 129, 0.3);
}

.metric-value-negative {
    color: var(--color-negative);
    text-shadow: 0 0 10px rgba(239, 68, 68, 0.3);
}

.metric-value-neutral {
    color: var(--color-neutral);
    text-shadow: 0 0 10px rgba(6, 182, 212, 0.3);
}

.metric-value-warning {
    color: var(--color-warning);
    text-shadow: 0 0 10px rgba(245, 158, 11, 0.3);
}

/* ============================================
   üîÑ DYNAMIC ANIMATIONS
   ============================================ */
.fade-in { 
    animation: fadeIn 0.5s ease-in-out; 
}

.slide-up { 
    animation: slideUp 0.3s ease-out; 
}

.pulse-glow {
    animation: pulseGlow 2s ease-in-out infinite;
}

@keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
}

@keyframes slideUp {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
}

@keyframes pulseGlow {
    0%, 100% { box-shadow: 0 0 20px rgba(16, 185, 129, 0.2); }
    50% { box-shadow: 0 0 30px rgba(16, 185, 129, 0.4); }
}

/* Dynamic component states */
.section-loading { 
    opacity: 0.6; 
    pointer-events: none; 
}

.section-ready { 
    opacity: 1; 
    transition: opacity 0.3s ease; 
}

/* ============================================
   üéØ ANALYTICAL NUMBERS
   ============================================ */
.analytical-number {
    font-variant-numeric: tabular-nums;
    font-feature-settings: "tnum";
}

/* ============================================
   üì± ENHANCED RESPONSIVE UTILITIES
   ============================================ */

/* Improved scrollbar styling */
.scrollbar-custom {
    scrollbar-width: thin;
    scrollbar-color: rgba(255, 255, 255, 0.3) transparent;
}

.scrollbar-custom::-webkit-scrollbar {
    width: 6px;
}

.scrollbar-custom::-webkit-scrollbar-track {
    background: transparent;
}

.scrollbar-custom::-webkit-scrollbar-thumb {
    background-color: rgba(255, 255, 255, 0.3);
    border-radius: 3px;
}

.scrollbar-custom::-webkit-scrollbar-thumb:hover {
    background-color: rgba(255, 255, 255, 0.5);
}
